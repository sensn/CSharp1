        <controls:UniformGrid x:Name="UniformGrid_Login"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1"  Orientation="Horizontal"  Columns="2" Rows="4"  ColumnSpacing="4" RowSpacing="4">
            <TextBox  x:Name="txtbox_username"  Grid.Row="0" Grid.Column="0"  Header="Username:"  PlaceholderText="Username"/>
            <PasswordBox x:Name="pwdbox_username"  Grid.Row="1" Grid.Column="0"  Header="Password:"  PlaceholderText="Password"/>
            <Button x:Name="btn_username" Content="Login"  Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btn_username_Click" />
            <HyperlinkButton Content="Create new account" HorizontalAlignment="Right" VerticalAlignment="Top"
